<%- include('./partials/header') %> 

<div class="auth-login-div">
    <%- include('./partials/navbar') %> 
    <%- include('./partials/error') %> 

    <h2 class="auth-login-title" data-aos="flip-up">Welcome back, adventurer</h2>
    <div class="auth-login-form-div">
    <form action="/login" method="POST" class="auth-login-form">
        <label for="username" class="auth-label" data-aos="fade-left" data-aos-delay="500">Enter your username.</label>
        <input type="text" name="username" class="auth-input" placeholder="e.g. Zach Pizzaz" data-aos="fade-left" data-aos-delay="500" required title="Please enter a username.">
       

        <label for="password" class="auth-label" data-aos="fade-left" data-aos-delay="700">Enter your password.</label>
        <div class="password-input-div">
            <input type="password" name="password" class="auth-input" placeholder="1 uppercase, 1 lowercase, 1 number" data-aos="fade-left" data-aos-delay="700" required title="Please enter a password." data-password-input>
            <img src="https://res.cloudinary.com/dsbyr3fhu/image/upload/v1674751684/Captain%27s%20Blog/Backgrounds%20and%20Icons/show-password_ocdlff.svg" alt="Show password." class="show-password" data-aos="fade-left" data-aos-delay="1000" data-show-password>
            <img src="https://res.cloudinary.com/dsbyr3fhu/image/upload/v1674744519/Captain%27s%20Blog/Backgrounds%20and%20Icons/hide-password_ubh6ul.svg" alt="Hide password." class="hide-password" data-hide-password>
        </div>
        <button class="auth-button" data-aos="fade-up" data-aos-delay="1100" data-aos-offset="0">Lift off</button>
    </form>
    </div>
</div>

<script>
    // show and hide password field
    const showPassword = document.querySelector('[data-show-password]')
    const hidePassword = document.querySelector('[data-hide-password]')
    const passwordInput = document.querySelector('[data-password-input]')

    showPassword && showPassword.addEventListener('click', () => {
        passwordInput.setAttribute('type', 'text')
        showPassword.style.display = 'none'
        hidePassword.style.display = 'block'
    })

    hidePassword && hidePassword.addEventListener('click', () => {
        passwordInput.setAttribute('type', 'password')
        hidePassword.style.display = 'none'
        showPassword.style.display = 'block'
    })
</script>

